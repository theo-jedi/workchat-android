<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MessageView">
        <attr name="avatar" format="string" />
    </declare-styleable>

    <declare-styleable name="MessageLayout">
        <attr name="bubbleColor" format="string" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DateView">
        <attr name="dateText" format="string" />
        <attr name="dateTextColor" format="string" />
        <attr name="dateBubbleColor" format="color" />
        <attr name="dateTextSize" format="dimension" />
        <attr name="dateMargins" format="integer" />
        <attr name="datePaddingsVertical" format="integer" />
        <attr name="datePaddingsHorizontal" format="integer" />
    </declare-styleable>

    <declare-styleable name="ReactionView">
        <attr name="emoji" format="string" />
        <attr name="text" format="string" />
        <attr name="reactionTextColor" format="color" />
        <attr name="reactionTextSize" format="dimension" />
        <attr name="reactionPadding" format="dimension" />
        <attr name="reactionBackground" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ReactionLayout">
        <attr name="reactionHorizontalMargin" format="dimension" />
        <attr name="reactionVerticalMargin" format="dimension" />
        <attr name="percentWidth" format="float" />
    </declare-styleable>
</resources>