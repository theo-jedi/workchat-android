<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WorkChat.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.WorkChat.BottomSheet.Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/background_light</item>
    </style>

    <style name="Theme.WorkChat.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_reaction_dialog</item>
    </style>

    <style name="Theme.WorkChat.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_light</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.WorkChat.RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black_2</item>
        <item name="cornerRadius">100dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.WorkChat.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.WorkChat.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Theme.WorkChat.TabLayout.TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>