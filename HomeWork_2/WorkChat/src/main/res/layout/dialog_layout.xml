<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@mipmap/ic_launcher_round" />

    <com.theost.workchat.ui.views.MessageLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:cornerRadius="18dp"
        android:layout_marginStart="8dp" />

    <com.theost.workchat.ui.views.EmojiLayout
        android:id="@+id/emojiLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:emojiHorizontalMargin="10dp"
        app:emojiVerticalMargin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="56dp"
            android:minHeight="37dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_emoji_view"
            android:contentDescription="@string/add_emoji"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintStart_toStartOf="parent"/>

    </com.theost.workchat.ui.views.EmojiLayout>

</merge>