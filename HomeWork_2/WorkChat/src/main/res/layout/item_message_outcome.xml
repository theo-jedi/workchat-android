<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.theost.workchat.ui.views.OutcomeMessageLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="18dp" />

    <com.theost.workchat.ui.views.ReactionLayout
        android:id="@+id/reactionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:reactionHorizontalMargin="10dp"
        app:reactionVerticalMargin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/addReaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_emoji_view"
            android:contentDescription="@string/add_emoji"
            android:minWidth="56dp"
            android:minHeight="37dp"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message" />

    </com.theost.workchat.ui.views.ReactionLayout>

</merge>